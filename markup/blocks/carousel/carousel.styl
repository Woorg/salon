.carousel
    margin-right -30px
    &__item
        height auto
        img
            max-width 100%
            height auto
    &__link
        display block
    &_discount
        .carousel__item
            padding-right 30px
            width 465px
    &_masters
        .carousel__item
            margin-right 35px
            margin-left 15px
            width 277px
            background linear-gradient(0deg, transparent 25%, #c7db9d )
            border-radius 50%
            overflow hidden
        img
            padding 6px
            border-radius 50%

        .carousel__link
            position relative
            display block
        .carousel__capture
            position absolute
            bottom 0
            left 0
            padding-top 5px
            padding-bottom 40px
            width 100%
            background rgba(0,0,0, .3)
            text-align center
            color #ffffff
            font-size 30px
            font-weight bold
            line-height 25px
            font-variant small-caps
        .carousel__item-title
            margin-bottom 1px
        .carousel__item-note
            font-size 20px
    &_cosmetics
        .carousel__item
            // margin-right 52px
            margin-right 33px
            margin-left 19px
            padding-right 0
            width 275px
            height 275px
            background linear-gradient(0deg, transparent 25%, #c7db9d )
            overflow hidden
            border-radius 81px
        .carousel__link
            position relative
            margin 6px
            background #fff
            height 100%
            display block
            border-radius 78px
            overflow hidden
            img
                // padding 6px
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%)
    .slick-arrow
        width 22px
        height 28px
        hide-text()
    .slick-prev
        left -24px
        background url('../images/general/slider-prev.png') 0 0 no-repeat

    .slick-next
        right 6px
        background url('../images/general/slider-next.png') 0 0 no-repeat
