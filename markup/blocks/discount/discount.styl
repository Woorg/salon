.discount
    position relative
    padding 6px
    float right
    width 472px
    height 272px
    background linear-gradient(0deg, transparent 25%, #c7db9d )
    text-shadow 1px 1px 1px rgba(2, 3, 3, 0.75)
    text-align center
    color #FFF
    clear both
    img
        box-shadow inset -9px 5px 10px rgba(2, 3, 3, 0.3)
        max-width 100%
        height auto
    &__w
        position absolute
        top 0
        left 0
        padding 16px 10px 10px
        width 100%
        height 100%
        z-index 1
    &__title
        margin-bottom 13px
        font-family $arctica
        font-size 40px
        font-weight normal
        line-height 30px
        line-height 1

    &__number
        margin-bottom 17px
        font-family $informal
        font-size 158px
        font-weight normal
        line-height 130px
    &__button
        position relative
        span
            &:after
                position absolute
                top -2px
                right -14px
                content '>'
                text-shadow 0 1px 0 rgba(255, 255, 255, 0.95)
                color #c76209
                font-size 38px
                font-weight bold

