.articles-list
	margin-left -22px
	font-size 0
	&__item
		margin-left 16px
		margin-bottom 33px
		width 306px
		min-height 380px
		@extends .ib
		text-align center
	&__w
		position relative
		margin-bottom 8px
	&__image
		position relative
		min-height 380px

		img
			position absolute
			bottom 0
			left 0
			max-width 100%
			height auto

	&__caption
		position absolute
		left 0
		bottom 0
		padding 10px
		width 100%
		min-height 95px
		background-color rgba(20, 20, 20, .5)
		font-size 23px
		text-align center
		color #ffffff
		text-transform uppercase
