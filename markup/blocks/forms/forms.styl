.form
	position relative
	z-index 1
	&.form_contacts
		margin auto
		width 286px
	&__text
		margin-bottom 27px
		font-size 23px
		font-weight bold
		line-height 1.09
		text-align center
		color #434343
		letter-spacing tracking(60)
	// &__form

	&__field
		margin-bottom 16px
	&__input
		padding 13px 16px 14px
		width 286px
		border-radius 6.3px
		background-color #ffffff
		box-shadow 0px 1px 0 0 #ffffff, inset 0px -2px 5px 0 rgba(0, 0, 0, 0.12)
		border solid 1px #8f8f8e
	&__submit
		margin-top 22px
		input
			width 100%
