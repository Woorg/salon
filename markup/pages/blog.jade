
doctype html
html(class="no-js", lang="ru")

	include ../blocks/head/head
	include ../blocks/header/header
	include ../blocks/section/section

	include ../blocks/articles-list/articles-list
	include ../blocks/pagination/pagination

	include ../blocks/footer/footer
	include ../blocks/bottom/bottom

	head
		+head(head.defaults)
	body.page
		|%=symbols=%

		.page__wrapper
			+header()

			+section-general(section.blog)

				+articles-list()

				+pagination()


			.page__buffer

		.page__footer
			+footer()

		script(src='%=static=%js/separate-js/svg4everybody.min.js')
		script svg4everybody();

		//- Main scripts. You can replace it, but I recommend you to leave it here
		script(src='%=static=%js/main%=hash=%%=min=%.js')
